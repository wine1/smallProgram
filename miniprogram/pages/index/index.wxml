<view class="wrap-index">
    <view class="header">{{dateToday}}</view>
    <view class="datePicker" style="display:none">
        <van-datetime-picker type="date" value="{{ currentDate }}" bind:input="onInput" min-date="{{ minDate }}" formatter="{{ formatter }}" />
    </view>
    <view class="main"  style="height:{{windowHeight-26}}px">
        <view class="ul">
            <view class="li"  wx:for="{{todayList}}" wx:key="index" bindtap="inputText" data-content="{{item.content}}" data-index="{{index}}">
                <text>{{item.content}}</text>
            </view>
        </view>
    </view>

    <view class="wrap-input">
        <input type="text" value="{{inputValue}}"/>
        <view class="confirm-btn" catchtap="confirm">чбошод</view>
    </view>
</view>